{% extends 'base.html.twig' %}

{% block title %}Liste des Auteurs Triée{% endblock %}

{% block body %}
    <h1>Liste des Auteurs Triée</h1>

        <form method="POST" action="{{ path('app_tri_authors') }}">
        <button type="submit" class="btn btn-primary">Tri par email croissant</button>
    </form>

    <table>
        <thead>
            <tr>
                <th style="border: 1px solid #000; padding: 8px;">ID</th>
                <th style="border: 1px solid #000; padding: 8px;">Username</th>
                <th style="border: 1px solid #000; padding: 8px;">Email</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td style="border: 1px solid #000; padding: 8px;">{{ author.id }}</td>
                    <td style="border: 1px solid #000; padding: 8px;">{{ author.username }}</td>
                    <td style="border: 1px solid #000; padding: 8px;">{{ author.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('app_home') }}">Retour à l'accueil</a>
{% endblock %}